# Server Configuration
PORT=8080
ENV=development

# Database Options:
#
# Option 1: Use local docker-compose PostgreSQL (recommended for development)
DATABASE_URL=postgresql://postgres:dev_password_local_only@localhost:5433/housepoints_go_dev?sslmode=disable
#
# Option 2: Connect to production k3s cluster (via kubectl port-forward)
# kubectl port-forward -n production svc/postgresql 5432:5432
# DATABASE_URL=postgresql://postgres:HP_Sec2025_O0mZVY90R1Yg8L@localhost:5432/gamull_chores?sslmode=disable
#
# Option 3: Direct connection to production database (not recommended)
# DATABASE_URL=postgresql://postgres:HP_Sec2025_O0mZVY90R1Yg8L@10.1.10.20:5432/gamull_chores?sslmode=disable

# Redis Options:
#
# Option 1: Use local docker-compose Redis (recommended for development)
REDIS_URL=redis://localhost:6380/0
#
# Option 2: Connect to production k3s cluster (via kubectl port-forward)
# kubectl port-forward -n production svc/redis 6379:6379
# REDIS_URL=redis://localhost:6379/2
#
# Option 3: Direct connection to production Redis (not recommended)
# REDIS_URL=redis://redis.production.svc.cluster.local:6379/2

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRY=24h

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://chores.gamull.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Multi-tenant
DEFAULT_FAMILY_PLAN=free
MAX_FAMILIES_PER_POD=500

# Feature Flags
ENABLE_DUAL_WRITE=false  # Enable to write to both Python and Go databases during migration
